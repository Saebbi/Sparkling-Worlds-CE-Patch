<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoMRGPistol</defName>
      <label>MRGPistol</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_MRGPistol</defName>
    <label>MRGPistol</label>
    <ammoTypes>
      <Ammo_MRGPistol>Bullet_MRGPistol</Ammo_MRGPistol>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="MRGPistolBase" ParentName="AmmoBase" Abstract="True">
    <description>MRG Pistol ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoMRGPistol</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="MRGPistolBase">
    <defName>Ammo_MRGPistol</defName>
    <label>MRG Pistol cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Rifle/FMJ</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseMRGPistol" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/MRGP</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <speed>200</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseMRGPistol">
    <defName>Bullet_MRGPistol</defName>
    <label>MRG Pistol shot</label>
    <projectile>
      <damageAmountBase>20</damageAmountBase>
      <armorPenetration>0.7</armorPenetration>
    </projectile>
  </ThingDef>
	
</Defs>