<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoLaunchedEMPGrenadeSW</defName>
      <label>EMP Grenade</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberGrenade</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_LaunchedEMPGrenadeSW</defName>
    <label>EMP Grenade</label>
    <ammoTypes>
      <Ammo_LaunchedEMPGrenadeSW>Bullet_LaunchedEMPGrenadeSW</Ammo_LaunchedEMPGrenadeSW>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="LaunchedEMPGrenadeSWBase" ParentName="AmmoBase" Abstract="True">
    <description>EMP Grenade</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoLaunchedEMPGrenadeSW</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="LaunchedEMPGrenadeSWBase">
    <defName>Ammo_LaunchedEMPGrenadeSW</defName>
    <label>EMP Grenade</label>
    <graphicData>
      <texPath>Things/Ammo/RPG/HEAT</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>2</MarketValue>
    </statBases>
    <ammoClass>RocketHEAT</ammoClass>
	<comps>
      <li Class="CombatExtended.CompProperties_ExplosiveCE">
        <explosionDamage>80</explosionDamage>
        <explosionDamageDef>EMP</explosionDamageDef>
        <explosionRadius>3.5</explosionRadius>
        <soundExplode>MortarBomb_Explode</soundExplode>
      </li>
    </comps>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="LaunchedEMPGrenadeSWRocket" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/GrenadeEMP</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>EMP</damageDef>
	  <explosionRadius>3.5</explosionRadius>
      <speed>24</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="LaunchedEMPGrenadeSWRocket">
    <defName>Bullet_LaunchedEMPGrenadeSW</defName>
    <label>EMP Grenade</label>
	<projectile>
		<explosionRadius>3.5</explosionRadius>
		<damageDef>EMP</damageDef>
		<damageAmountBase>80</damageAmountBase>
		<explosionDelay>40</explosionDelay>
	</projectile>
  </ThingDef>
	
</Defs>