<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoPlasmaGunSW</defName>
      <label>Plasma charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_PlasmaGunSW</defName>
    <label>Plasma charge</label>
    <ammoTypes>
      <Ammo_PlasmaGunSW>Bullet_PlasmaGunSW</Ammo_PlasmaGunSW>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="PlasmaGunSWBase" ParentName="AmmoBase" Abstract="True">
    <description>Plasma ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoPlasmaGunSW</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="PlasmaGunSWBase">
    <defName>Ammo_PlasmaGunSW</defName>
    <label>Plasma cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Ion</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BasePlasmaGunSW" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Items/PlasmaShotSW</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <damageDef>PlasmaSW</damageDef>
      <speed>40</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BasePlasmaGunSW">
    <defName>Bullet_PlasmaGunSW</defName>
    <label>Plasma shot</label>
    <projectile>
      <damageAmountBase>120</damageAmountBase>
      <armorPenetration>0.95</armorPenetration>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="ChargeAmmoRecipeBase">
    <defName>MakeAmmo_PlasmaGunSW</defName>
    <label>make Plasmagun cartridge x20</label>
    <description>Craft 20 Plasmagun cartridges.</description>
    <jobString>Making Plasmagun cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_PlasmaGunSW>20</Ammo_PlasmaGunSW>
    </products>
  </RecipeDef>
	
</Defs>