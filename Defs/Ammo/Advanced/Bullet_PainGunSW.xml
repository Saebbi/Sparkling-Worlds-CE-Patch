<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoPainGunSW</defName>
      <label>Paingun cartridge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_PainGunSW</defName>
    <label>Paingun cartridge</label>
    <ammoTypes>
      <Ammo_PainGunSW>Bullet_PainGunSW</Ammo_PainGunSW>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="PainGunSWBase" ParentName="AmmoBase" Abstract="True">
    <description>Pain gun ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoPainGunSW</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="PainGunSWBase">
    <defName>Ammo_PainGunSW</defName>
    <label>Pain gun cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Concentrated</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BasePainGunSW" ParentName="BaseBullet" Abstract="true">
    <graphicData>
		<texPath>Things/Projectile/Charge_Small</texPath>
		<graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>NevSystemShockDamageSW</damageDef>
      <speed>100</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BasePainGunSW">
    <defName>Bullet_PainGunSW</defName>
    <label>Pain gun shot</label>
    <projectile>
      <damageAmountBase>1</damageAmountBase>
      <armorPenetration>0.8</armorPenetration>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_PainGunSW</defName>
    <label>make PainGun cartridge x20</label>
    <description>Craft 20 PainGun cartridges.</description>
    <jobString>Making PainGun cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_PainGunSW>20</Ammo_PainGunSW>
    </products>
	<researchPrerequisite>NervShockerRangedSW</researchPrerequisite>
  </RecipeDef>
	
</Defs>