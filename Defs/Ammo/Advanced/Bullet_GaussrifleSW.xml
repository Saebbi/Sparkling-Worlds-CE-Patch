<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoGaussrifleSW</defName>
      <label>Gaussrifle charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_GaussrifleSW</defName>
    <label>Gaussrifle charge</label>
    <ammoTypes>
      <Ammo_GaussrifleSW>Bullet_GaussrifleSW</Ammo_GaussrifleSW>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="GaussrifleSWBase" ParentName="AmmoBase" Abstract="True">
    <description>Gauss Rifle ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoGaussrifleSW</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="GaussrifleSWBase">
    <defName>Ammo_GaussrifleSW</defName>
    <label>Gauss Rifle cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Regular</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseGaussrifleSW" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <speed>120</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseGaussrifleSW">
    <defName>Bullet_GaussrifleSW</defName>
    <label>Gauss Rifle shot</label>
    <projectile>
      <damageAmountBase>12</damageAmountBase>
      <armorPenetration>0.8</armorPenetration>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_GaussrifleSW</defName>
    <label>make Gaussrifle cartridge x20</label>
    <description>Craft 20 Gaussrifle cartridges.</description>
    <jobString>Making Gaussrifle cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_GaussrifleSW>20</Ammo_GaussrifleSW>
    </products>
	<researchPrerequisite>RailgunSW</researchPrerequisite>
  </RecipeDef>
	
</Defs>